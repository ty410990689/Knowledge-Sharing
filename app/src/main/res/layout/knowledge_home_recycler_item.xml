<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main_rc_item"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:fresco="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rl_item_home_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_home_rc_item_bg"
            android:layout_width="match_parent"
            fresco:actualImageScaleType="fitXY"
            android:layout_height="match_parent"
            android:background="@color/colorBlack" />

        <View
            android:id="@+id/view_home_rc_item_cover"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/knowledge_recycler_bg_night_theme"
            app:layout_heightPercent="50%"></View>

        <TextView
            app:layout_marginBottomPercent="3%"
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_knowledge_who"
            app:layout_widthPercent="40%"
            app:layout_heightPercent="13%"
            android:gravity="left|bottom"
            />
        <TextView
            app:layout_marginBottomPercent="3%"
            android:id="@+id/tv_knowledge_time"
            app:layout_widthPercent="60%"
            app:layout_heightPercent="13%"
            android:gravity="right|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/tv_knowledge_desc"
            android:layout_width="match_parent"
            android:gravity="left"
            app:layout_marginTopPercent="15%"
            app:layout_heightPercent="25%"
            android:layout_alignTop="@+id/view_home_rc_item_cover"
            android:layout_alignParentStart="true" />
    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentFrameLayout>