<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_root_layout"
    android:orientation="vertical">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_login"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/edy_login_account"
            style="@style/UserEditTextViewCustomStyle"
            android:layout_centerHorizontal="true"
            android:hint="请输入账号"
            app:layout_heightPercent="8%"
            app:layout_marginTopPercent="20%"
            app:layout_widthPercent="70%" />

        <EditText
            android:id="@+id/edt_login_password"
            style="@style/UserEditTextViewCustomStyle"
            android:layout_centerHorizontal="true"
            android:hint="请输入密码"
            android:textCursorDrawable="@color/colorGray"
            app:layout_heightPercent="8%"
            app:layout_marginTopPercent="32%"
            app:layout_widthPercent="70%" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="登录"
            android:textColor="@color/colorGray"
            app:layout_marginTopPercent="55%" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:text="注册"
            android:textColor="@color/colorGray"
            app:layout_marginTopPercent="55%" />
        <com.wang.avi.AVLoadingIndicatorView
            android:background="@color/colorTrasparentBlack"
            android:layout_centerInParent="true"
            android:id="@+id/avi_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AVLoadingIndicatorView.Large"
            android:visibility="visible"
            app:indicatorName="BallZigZagDeflectIndicator"
            app:indicatorColor="@color/colorWhite"
            />
    </android.support.percent.PercentRelativeLayout>


</RelativeLayout>